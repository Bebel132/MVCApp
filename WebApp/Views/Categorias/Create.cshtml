@model Categoria

@section title {
    <h3>Nova Categoria</h3>
}

<a class="btn btn-link" asp-controller="categorias" asp-action="index">voltar</a>
<form method="post" asp-controller="categorias" asp-action="create">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <div class="col-2">
            <label asp-for="Nome" class="col-form-label">Nome</label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Nome" />
        </div>
        <div class="col-2">
            <label asp-for="Descricao" class="col-form-label">Descrição</label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Descricao" />
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>
